<button class="toggle md:hidden z-20">
  <i class="text-4xl text-blue-700 fa-solid fa-bars"></i>
</button>

<script>
  const toggleBtn = document.querySelector('.toggle') as HTMLButtonElement;
  const sidebar = document.querySelector('.sidebar') as HTMLDivElement;
  
  toggleBtn.addEventListener('click', () => {
    sidebar.classList.toggle('hidden');
    sidebar.classList.toggle('flex');
    toggleBtn.firstElementChild?.classList.toggle('fa-bars');
    toggleBtn.firstElementChild?.classList.toggle('fa-x');
  });

</script>