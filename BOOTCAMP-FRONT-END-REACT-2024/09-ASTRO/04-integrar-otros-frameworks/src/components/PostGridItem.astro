---

interface Props { 
  title: string;
  description: string;
  img: {
    src: string;
    alt: string;
  };
  tags: string[]  
  url?: string;
}


const { title, description, img, tags, url } = Astro.props;
---


<article class="p-2 rounded border-2">
  <a href={url}>
    <img src={img.src} alt={img.alt}>
  </a>
  <a href={url}>
    <h2 class="text-2xl font-bold my-3">{title}</h2>
  </a>
  <p>{description}</p>
  <div class="flex gap-3 mt-3">
    {
      tags.map((tag) => <a class="py-1 px-3 bg-gray-200 rounded-full" href={`/tags/${tag}`}>{tag}</a>)
    }
  </div>
</article>
