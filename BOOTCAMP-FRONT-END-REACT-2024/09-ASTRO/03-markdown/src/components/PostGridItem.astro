---

interface Props {
  post: {
    title: string;
    description: string;
    img: {
      src: string;
      alt: string;
    };
    tags: string[]
  }
  url?: string;
}


const { post, url } = Astro.props;

---

<a href={url}>
  <article class="p-2 rounded border-2">
    <a href={url}>
      <img src={post.img.src} alt={post.img.alt}>
    </a>
    <a href={url}>
      <h2 class="text-2xl font-bold my-3">{post.title}</h2>
    </a>
    <p>{post.description}</p>
    <div class="flex gap-3 mt-3">
      {
        post.tags.map((tag) => <a class="py-1 px-3 bg-gray-200 rounded-full" href={`/tags/${tag}`}>{tag}</a>)
      }
    </div>
  </article>
</a>